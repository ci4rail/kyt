apiVersion: apps/v1
kind: Deployment
metadata:
  name: kyt-api-server
  namespace: SERVICE_NAMESPACE
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kyt-api-server
  template:
    metadata:
      labels:
        app: kyt-api-server
    spec:
      nodeSelector:
        "beta.kubernetes.io/os": linux
      containers:
        - name: kyt-api-server
          image: DOCKER_IMAGE
          resources:
            requests:
              cpu: 100m
              memory: 128Mi
            limits:
              cpu: 250m
              memory: 256Mi
          env:
            - name: IOTHUB_SERVICE_CONNECTION_STRING
              value: "CONNECTION_STRING_VALUE"
          ports:
            - containerPort: 8080
      imagePullSecrets:
        - name: SECRET_NAME
---
apiVersion: v1
kind: Service
metadata:
  name: kyt-api-server
  namespace: SERVICE_NAMESPACE
spec:
  type: ClusterIP
  ports:
    - port: 8080
  selector:
    app: kyt-api-server
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: kyt-ingress
  namespace: SERVICE_NAMESPACE
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-production
    nginx.ingress.kubernetes.io/rewrite-target: /
    nginx.ingress.kubernetes.io/use-regex: "true"
spec:
  tls:
    - hosts:
        - DOMAIN
      secretName: kyt-tls-secret
  rules:
    - host: DOMAIN
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: kyt-api-server
                port:
                  number: 8080
---
apiVersion: cert-manager.io/v1alpha2
kind: Certificate
metadata:
  name: kyt-tls-secret
  namespace: SERVICE_NAMESPACE
spec:
  secretName: kyt-tls-secret
  dnsNames:
    - DOMAIN
  commonName: DOMAIN
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
